<script>
    function UpdateArgs() {
        var game = document.getElementById("Game").value;
        var map = document.getElementById("Map").value;
        document.getElementById("argsTitle").innerHTML = "terminal representation: ";
        document.getElementById("args").innerHTML = "> " + game + "Server.exe " + "&lt;GeneratedFilePath&gt;/" + map;
    }
</script>
