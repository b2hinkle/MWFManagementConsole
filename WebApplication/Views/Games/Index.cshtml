@model IEnumerable<DataLibrary.Models.GameModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="col-md-2 float-right">
    <a class="btn btn-primary" asp-controller="Games" asp-action="AddGame">Add Game</a>
    <a class="btn btn-light" asp-controller="Games" asp-action="Refresh">Refresh</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Map)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Args)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Game)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Map)
            </td>
            <td style="font-size:9px">
                @Html.DisplayFor(modelItem => item.Args)
            </td>
            <td>
                <form asp-controller="Games" asp-action="EditGame" method="post">
                    <input type="hidden" name="Id" value="@item.Id" />
                    <button type="submit" name="button">Edit</button>
                </form>
                <form asp-controller="Games" asp-action="DeleteGame" method="post">
                    <input type="hidden" name="Id" value="@item.Id" />
                    <button type="submit" name="button">Delete</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
